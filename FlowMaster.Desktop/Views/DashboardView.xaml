<UserControl x:Class="FlowMaster.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:FlowMaster.Desktop.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Pending Header -->
            <RowDefinition Height="*" />    <!-- Pending Grid -->
            <RowDefinition Height="Auto" /> <!-- My Docs Header -->
            <RowDefinition Height="*" />    <!-- My Docs Grid -->
        </Grid.RowDefinitions>

        <!-- 1. Pending Approvals -->
        <TextBlock Grid.Row="0" Text="결재 대기 문서 (Pending Approvals)" 
                   FontSize="18" FontWeight="Bold" Foreground="#002c5f" Margin="0,0,0,10"/>
        
        <DataGrid Grid.Row="1" ItemsSource="{Binding PendingApprovals}" AutoGenerateColumns="False" IsReadOnly="True"
                  BorderBrush="#e4dcd3" BorderThickness="1" Background="White" Margin="0,0,0,20">
            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" 
                              Command="{Binding OpenDetailCommand}" 
                              CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=SelectedItem}"/>
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Header="DocId" Binding="{Binding DocId}" Width="60"/>
                <DataGridTextColumn Header="제목" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="작성자" Binding="{Binding WriterName}" Width="120"/>
                <DataGridTextColumn Header="작성일" Binding="{Binding CreateDate, StringFormat=yyyy-MM-dd}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 2. My Documents -->
        <TextBlock Grid.Row="2" Text="내가 올린 문서 (My Documents)" 
                   FontSize="18" FontWeight="Bold" Foreground="#002c5f" Margin="0,0,0,10"/>

        <DataGrid Grid.Row="3" ItemsSource="{Binding MyDrafts}" AutoGenerateColumns="False" IsReadOnly="True"
                  BorderBrush="#e4dcd3" BorderThickness="1" Background="White">
            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" 
                              Command="{Binding OpenDetailCommand}" 
                              CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=SelectedItem}"/>
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Header="DocId" Binding="{Binding DocId}" Width="60"/>
                <DataGridTextColumn Header="제목" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="상태" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="작성일" Binding="{Binding CreateDate, StringFormat=yyyy-MM-dd}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
